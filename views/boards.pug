extends layout

append head
    link(rel='stylesheet' type='text/css' href='/stylesheets/boards.css')
    
block content
  main.section.boards
    a(href="/") Back
    fieldset
      legend
        h2 #{title}
      form(action="/boards" method="post")
            input(name="board_name" type="text" placeholder="New board")
            input(type="submit" value="Create!")

      ul
        each board in boards
          li
            a(href=`/boards/${board.id}/${board.name}`) #{board.name}
        
        